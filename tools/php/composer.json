{
    "name": "saro0h/to-do-list",
    "license": "proprietary",
    "type": "project",
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.24",
        "nunomaduro/phpinsights": "^2.8",
        "phpmetrics/phpmetrics": "^2.8",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-doctrine": "^1.3",
        "phpstan/phpstan-symfony": "^1.3",
        "rector/rector": "^0.18.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "../../src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "../../tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "analyze": [
            "@rector-bs",
            "@cs-bs",
            "@metrics",
            "@stan"
        ],
        "cs": "./vendor/bin/php-cs-fixer fix --verbose --allow-risky=yes --config=config/.php-cs-fixer.dist.php",
        "cs-bs": "./vendor/bin/php-cs-fixer fix --verbose --allow-risky=yes --config=config/.php-cs-fixer.dist.php --dry-run --format=txt > reports/phpcsfixer-baseline.txt || true",
        "fix": [
            "@rector",
            "@cs",
            "@insights"
        ],
        "insights": "cd ../.. && tools/php/vendor/bin/phpinsights --format=console --no-interaction --fix",
        "insights-bs": "cd ../.. && tools/php/vendor/bin/phpinsights --format=console --no-interaction -v > tools/php/reports/insights.txt || true",
        "metrics-src": "./vendor/bin/phpmetrics --level=10 --extensions=php8,php,inc ../../src --report-html=reports/metrics-src --report-violations=reports/metrics-src/violations.xml --exclude=DataFixtures",
        "metrics-test": "./vendor/bin/phpmetrics --level=10 --extensions=php8,php,inc ../../tests --report-html=reports/metrics-test --report-violations=reports/metrics-test/violations.xml --exclude=DataFixtures",
        "metrics": [
            "@metrics-src",
            "@metrics-test",
            "@insights-bs"
        ],
        "rector": "./vendor/bin/rector process --config config/rector.php --clear-cache --debug",
        "rector-bs": "./vendor/bin/rector process --config config/rector.php --clear-cache --dry-run > reports/rector.txt || true",
        "stan": "./vendor/bin/phpstan analyze --configuration=config/phpstan.neon --ansi -v || true"
    }
}
