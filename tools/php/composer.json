{
    "name": "saro0h/to-do-list",
    "license": "proprietary",
    "type": "project",
    "autoload": {
        "psr-4": {
            "App\\": "../../src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "../../tests/"
        }
    },
    "require-dev": {
        "nunomaduro/phpinsights": "^2.8",
        "friendsofphp/php-cs-fixer": "^3.24",
        "phpstan/phpstan-symfony": "*",
        "rector/rector": "^0.18.1",
        "phpmetrics/phpmetrics": "^2.8",
        "phpstan/phpstan-doctrine": "^1.3"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "analyze": [
            "@stan",
            "@cs-bs",
            "@rector-bs",
            "@insights-bs",
            "@metrics"
        ],
        "fix": [
            "@cs",
            "@insights",
            "@rector"
        ],
        "stan": "./vendor/bin/phpstan analyze --configuration=config/phpstan.neon --ansi -v || true",
        "cs": "./vendor/bin/php-cs-fixer fix ../../src --rules=@Symfony --verbose --allow-risky=yes",
        "cs-bs": "./vendor/bin/php-cs-fixer fix ../../src --rules=@Symfony --verbose --allow-risky=yes --dry-run --format=txt > reports/phpcsfixer-baseline.txt || true",
        "rector": "./vendor/bin/rector process ../../src --config config/rector.php",
        "rector-bs": "./vendor/bin/rector process ../../src --config config/rector.php --dry-run > reports/rector.txt",
        "insights-bs": "./vendor/bin/phpinsights analyse ../../src --no-interaction --min-quality=100 --min-complexity=100 --min-architecture=100 --min-style=100 --format=console > reports/phpinsights-baseline.txt || true",
        "insights": "./vendor/bin/phpinsights fix",
        "metrics": "./vendor/bin/phpmetrics --report-html=reports/phpmetrics.html ../../src --report-xml=reports/phpmetrics.xml --report-violation=reports/phpmetrics.violation.xml --level=10 --extensions=php"
    }
}
